<%= form_for @task do |f| %>
  <%= label_tag(:name, "Task") %>
  <%= f.text_field :name, placeholder: "Here put your task" %>
  <%= label_tag(:description, "Description") %>
  <%= f.text_field :description, placeholder: "Here put your description" %>
  <%= f.check_box :done %>
  <%= f.submit %>
<% end %>
